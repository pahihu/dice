relabel rd1: name "Disk1_V3.0"
diskchange RD1:
relabel rd2: name "Disk2_V3.0"
diskchange RD2:
relabel rd3: name "Disk3_V3.0"
diskchange RD3:
relabel rd4: name "Disk4_V3.0"
