		section text,code

		xref	_MathBase
		xref	_LVOSPFix
		xdef	__ffpfix_a

__ffpfix_a	movem.l D2/D3/A6,-(sp)
		move.l	_MathBase(A4),A6
		jsr	_LVOSPFix(A6)
		movem.l (sp)+,D2/D3/A6
		rts

		END

