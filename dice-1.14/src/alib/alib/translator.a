			xdef	_TranslatorBase
			xref	__AutoFail0

_LVOOpenLibrary 	equ	-552
_LVOCloseLibrary	equ	-414

			section autoinit0,code

			moveq.l #0,D0
			lea	tranname(pc),A1
			jsr	_LVOOpenLibrary(A6)
			move.l	D0,_TranslatorBase(A4)
			beq	__AutoFail0
			bra	i10
tranname		dc.b	'translator.library',0
			ds.w	0
i10

			section autoexit0,code

			move.l	_TranslatorBase(A4),D0
			beq	l10
			move.l	D0,A1
			jsr	_LVOCloseLibrary(A6)
l10


			section libbss,bss

_TranslatorBase 	ds.l	1

			END

